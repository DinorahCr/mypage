<post>

	<div id="left"> </div>
	<div id="right"></div>
	<div id="top"></div>
	<div id="bottom"></div>
    
    <% @posts.each do |post| %>
      
        <%= post.description %>
        <%= post.date %>
        <%= post.image %>
        <%= link_to 'Show', post %>
        <%= link_to 'Edit', edit_post_path(post) %>
        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
   
    <% end %>
 

<br>
</post>
<%= link_to 'New Post', new_post_path %>
